{
  "private": true,
  "license": "MIT",
  "workspaces": ["packages/*"],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --ci --runInBand",
    "test:ci":
      "npm run lint && npm run flow && npm run test:coverage && npm run add:coveralls",
    "add:coveralls": "cat ./coverage/lcov.info | coveralls",
    "fmt": "prettier --write '**/*.{js,json}'",
    "flow": "flow",
    "checks": "npm run flow && npm run lint && npm run test",
    "lint": "eslint .",
    "build": "node ./scripts/build",
    "prepare": "yarn build",
    "postinstall": "yarn fmt"
  },
  "lint-staged": {
    "*.js": ["fmt", "checks", "git add"],
    "*.json": ["fmt", "git add"]
  },
  "devDependencies": {
    "all-contributors-cli": "^4.5.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-log": "^2.0.0",
    "babel-plugin-tester": "^4.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-precure": "^0.10.1",
    "flow-bin": "^0.57.2",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lerna": "^2.3.1",
    "lint-staged": "^4.1.3",
    "mkdirp": "^0.5.1",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2"
  }
}

{
  "private": true,
  "license": "MIT",
  "workspaces": ["packages/*"],
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "fmt": "prettier --write '**/*.{js,json}'",
    "lint": "eslint .",
    "prebuild": "rimraf ./packages/**/lib",
    "build": "lerna run build",
    "prepare": "yarn build",
    "postinstall": "yarn fmt"
  },
  "lint-staged": {
    "*.js": ["fmt", "lint", "test", "git add"],
    "*.json": ["fmt", "git add"]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-log": "^2.0.0",
    "babel-plugin-tester": "^4.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.7.2",
    "eslint-config-precure": "^0.8.1",
    "flow-bin": "^0.55.0",
    "husky": "^0.14.3",
    "jest": "^21.2.0",
    "jest-cli": "^21.2.0",
    "lerna": "^2.1.2",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.2"
  }
}
